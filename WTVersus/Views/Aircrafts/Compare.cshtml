@model IEnumerable<WTVersus.Models.Plane>;
@{
    ViewData["Title"] = "Aircrafts compare";
}

<div class="container">
    <table id="PlaneTable" class="table table-hover table-bordered table-sm text-center">
        <tr>
            <td style="width: 20%"></td>
            <td style="width: 15%">

                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                        [@String.Format("{0:F1}", Model.ElementAt(0).BR)] @Model.ElementAt(0).Name
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <input class="form-control" id="myInput" type="text" placeholder="Search..">
                        @foreach (Plane item in ViewBag.AllPlanesSelected as IEnumerable<Plane>)
                        {
                            <li>
                                <a class="dropdown-item" asp-controller="Aircrafts" asp-action="Compare"
                                   asp-route-vehicle1="@item.VehicleId">[@String.Format("{0:F1}", item.BR)] @item.Name</a>
                            </li>
                        }
                    </ul>
                </div>

            </td>
            <td style="width: 15%">
                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                        [@String.Format("{0:F1}", Model.ElementAt(1).BR)] @Model.ElementAt(1).Name
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <input class="form-control" id="myInput" type="text" placeholder="Search..">
                        @foreach (Plane item in ViewBag.AllPlanesSelected as IEnumerable<Plane>)
                        {
                            <li>
                                <a class="dropdown-item" asp-controller="Aircrafts" asp-action="Compare"
                                   asp-route-vehicle2="@item.VehicleId">[@String.Format("{0:F1}", item.BR)] @item.Name</a>
                            </li>
                        }
                    </ul>
                </div>
            </td>
            <td style="width: 15%">

                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                        [@String.Format("{0:F1}", Model.ElementAt(2).BR)] @Model.ElementAt(2).Name
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <input class="form-control" id="myInput" type="text" placeholder="Search..">
                        @foreach (Plane item in ViewBag.AllPlanesSelected as IEnumerable<Plane>)
                        {
                            <li>
                                <a class="dropdown-item" asp-controller="Aircrafts" asp-action="Compare"
                                   asp-route-vehicle3="@item.VehicleId">[@String.Format("{0:F1}", item.BR)] @item.Name</a>
                            </li>
                        }
                    </ul>
                </div>

            </td>
            <td style="width: 15%">

                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                        [@String.Format("{0:F1}", Model.ElementAt(3).BR)] @Model.ElementAt(3).Name
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <input class="form-control" id="myInput" type="text" placeholder="Search..">
                        @foreach (Plane item in ViewBag.AllPlanesSelected as IEnumerable<Plane>)
                        {
                            <li>
                                <a class="dropdown-item" asp-controller="Aircrafts" asp-action="Compare"
                                   asp-route-vehicle4="@item.VehicleId">[@String.Format("{0:F1}", item.BR)] @item.Name</a>
                            </li>
                        }
                    </ul>
                </div>

            </td>
        </tr>

        <tr>
            <td style="width: 20%"></td>
            <td style="width: 15%">
                <table class="table-borderless" cellspacing="0" cellpadding="0" border="0" width="100%">
                    <tr>
                        <td width="50%">@Model.ElementAt(0).Nation</td>
                        <td width="50%">Rank: @Model.ElementAt(0).Rank</td>
                    </tr>
                </table>
            </td>
            <td style="width: 15%">
