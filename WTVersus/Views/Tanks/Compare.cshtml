@model IEnumerable<WTVersus.Models.Tank>;
@{
    ViewData["Title"] = "Ground vehicle compare";
}

    <div class="container">
        <table class="table table-hover table-bordered table-sm text-center">
            <tbody>
                <tr>
                    <th style="width: 20%"></th>
                    <td style="width: 15%">
                        <div class="dropdown @Model.ElementAt(0).Type">
                            <button class="btn dropdown-toggle text-wrap" type="button" data-toggle="dropdown">
                                @{string img0name = Model.ElementAt(0).Nation + ".png";}
                                <img src="~/images/@img0name" class="img-fluid" width="25">
                                [@String.Format("{0:F1}", Model.ElementAt(0).BR)]
                                @Model.ElementAt(0).Name
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-height-fix">
                                <input class="form-control" id="myInput1" type="text" placeholder="Search..">
                                @foreach (Tank item in ViewBag.AllTanksSelected as IEnumerable<Tank>)
                                {
                                    <li>
                                        <a class="dropdown-item @item.Type" asp-controller="Tanks" asp-action="Compare"
                                           asp-route-vehicle1="@item.VehicleId">
                                            @{string img0item = item.Nation + ".png";}
                                            <img src="~/images/@img0item" class="img-fluid" width="25">
                                            [@String.Format("{0:F1}", item.BR)] @item.Name
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </td>
                    <td style="width: 15%">
                        <div class="dropdown @Model.ElementAt(1).Type">
                            <button class="btn dropdown-toggle  text-wrap" type="button" data-toggle="dropdown">
                                @{string img1name = Model.ElementAt(1).Nation + ".png";}
                                <img src="~/images/@img1name" class="img-fluid" width="25">
                                [@String.Format("{0:F1}", Model.ElementAt(1).BR)]
                                @Model.ElementAt(1).Name
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-height-fix">
                                <input class="form-control" id="myInput2" type="text" placeholder="Search..">
                                @foreach (Tank item in ViewBag.AllTanksSelected as IEnumerable<Tank>)
                                {
                                    <li>
                                        <a class="dropdown-item @item.Type" asp-controller="Tanks" asp-action="Compare"
                                           asp-route-vehicle2="@item.VehicleId">
                                            @{string img1item = item.Nation + ".png";}
                                            <img src="~/images/@img1item" class="img-fluid" width="25">
                                            [@String.Format("{0:F1}", item.BR)] @item.Name
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </td>
                    <td style="width: 15%">
                        <div class="dropdown @Model.ElementAt(2).Type">
                            <button class="btn dropdown-toggle  text-wrap" type="button" data-toggle="dropdown">
                                @{string img2name = Model.ElementAt(2).Nation + ".png";}
                                <img src="~/images/@img2name" class="img-fluid" width="25">
                                [@String.Format("{0:F1}", Model.ElementAt(2).BR)]
                                @Model.ElementAt(2).Name
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-height-fix">
                                <input class="form-control" id="myInput3" type="text" placeholder="Search..">
                                @foreach (Tank item in ViewBag.AllTanksSelected as IEnumerable<Tank>)
                                {
                                    <li>
                                        <a class="dropdown-item @item.Type" asp-controller="Tanks" asp-action="Compare"
                                           asp-route-vehicle3="@item.VehicleId">
                                            @{string img2item = item.Nation + ".png";}
                                            <img src="~/images/@img2item" class="img-fluid" width="25">
                                            [@String.Format("{0:F1}", item.BR)] @item.Name
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </td>
                    <td style="width: 15%">
                        <div class="dropdown @Model.ElementAt(3).Type">
                            <button class="btn dropdown-toggle  text-wrap" type="button" data-toggle="dropdown">
                                @{string img3name = Model.ElementAt(3).Nation + ".png";}
                                <img src="~/images/@img3name" class="img-fluid" width="25">
                                [@String.Format("{0:F1}", Model.ElementAt(3).BR)]
                                @Model.ElementAt(3).Name
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-height-fix">
                                <input class="form-control" id="myInput4" type="text" placeholder="Search..">
                                @foreach (Tank item in ViewBag.AllTanksSelected as IEnumerable<Tank>)
                                {
                                    <li>
                                        <a class="dropdown-item @item.Type" asp-controller="Tanks" asp-action="Compare"
                                           asp-route-vehicle4="@item.VehicleId">
                                            @{string img3item = item.Nation + ".png";}
                                            <img src="~/images/@img3item" class="img-fluid" width="25">
                                            [@String.Format("{0:F1}", item.BR)] @item.Name
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th style="width: 20%"></th>
                    <td style="width: 15%"><img class="img-fluid @Model.ElementAt(0).Class" src="@Model.ElementAt(0).Image" alt="Tank" /></td>
                    <td style="width: 15%"><img class="img-fluid  @Model.ElementAt(1).Class" src="@Model.ElementAt(1).Image" alt="Tank" /></td>
                    <td style="width: 15%"><img class="img-fluid  @Model.ElementAt(2).Class" src="@Model.ElementAt(2).Image" alt="Tank" /></td>
                    <td style="width: 15%"><img class="img-fluid  @Model.ElementAt(3).Class" src="@Model.ElementAt(3).Image" alt="Tank" /></td>
                </tr>
                <tr class="high">
                    <th style="width: 20%" title="The year when the vehicle ride the first time">First ride</th>
                    <td style="width: 15%">@Model.ElementAt(0).FirstRideYear</td>
                    <td style="width: 15%">@Model.ElementAt(1).FirstRideYear</td>
                    <td style="width: 15%">@Model.ElementAt(2).FirstRideYear</td>
                    <td style="width: 15%">@Model.ElementAt(3).FirstRideYear</td>
                </tr>
                <tr class="low">
                    <th style="width: 20%" title="The maximum repair cost of the spaded vehicle">Repair cost</th>
                    <td style="width: 15%">@Model.ElementAt(0).RepairCost s.l.</td>
                    <td style="width: 15%">@Model.ElementAt(1).RepairCost s.l.</td>
                    <td style="width: 15%">@Model.ElementAt(2).RepairCost s.l.</td>
                    <td style="width: 15%">@Model.ElementAt(3).RepairCost s.l.</td>
                </tr>
                <tr class="low">
                    <th style="width: 20%" title="The purchase cost">Purchase cost (Dev)</th>
                    <td style="width: 15%">N/A</td>
                    <td style="width: 15%">N/A</td>
                    <td style="width: 15%">N/A</td>
                    <td style="width: 15%">N/A</td>
                </tr>
                <tr class="high">
                    <th style="width: 20%" title="Win rate from thunderskill.com">Win rate (Dev)</th>
                    <td style="width: 15%">N/A</td>
                    <td style="width: 15%">N/A</td>
                    <td style="width: 15%">N/A</td>
                    <td style="width: 15%">N/A</td>
                </tr>
                <tr class="high">
                    <th style="width: 20%" title="Win rate from thunderskill.com">Review (Dev)</th>
                    <td style="width: 15%">N/A</td>
                    <td style="width: 15%">N/A</td>
                    <td style="width: 15%">N/A</td>
                    <td style="width: 15%">N/A</td>
                </tr>
            </tbody>
        </table>

        <br>


        <table class="table table-hover table-bordered table-sm text-center">
            <tbody>
                <tr class="red-table-label">
                    <td style="width: 100%" colspan="5">Weapon specifications</td>
                </tr>
                <tr>
                    <th style="width: 20%" title="Description of cannon">Cannon</th>
                    <td style="width: 15%">@Html.Raw(Model.ElementAt(0).Cannon)</td>
                    <td style="width: 15%">@Html.Raw(Model.ElementAt(1).Cannon)</td>
                    <td style="width: 15%">@Html.Raw(Model.ElementAt(2).Cannon)</td>
                    <td style="width: 15%">@Html.Raw(Model.ElementAt(3).Cannon)</td>
                </tr>
                <tr class="high">
                    <th style="width: 20%" title="Armor penetration shows for a round maximum armor-piercing ability. For 6 and 7 tier, priority APFSDS shell">Armor penetration</th>
                    <td style="width: 15%">@Model.ElementAt(0).Penetration mm</td>
                    <td style="width: 15%">@Model.ElementAt(1).Penetration mm</td>
                    <td style="width: 15%">@Model.ElementAt(2).Penetration mm</td>
                    <td style="width: 15%">@Model.ElementAt(3).Penetration mm</td>
                </tr>
                <tr>
                    <th style="width: 20%" class="align-middle" title="Available shell type">Shell type</th>
                    @for (int i = 0; i < 4; i++)
                    {
                        <td style="width: 15%">
                            @{
                                if (Model.ElementAt(i).ShellAP)
                                {
                                    <img src="~/images/ShellAP.png" alt="" title="Armour-Piercing and othet variations like a APC, APCBC, APBC" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellAPHE)
                                {
                        <img src="~/images/ShellAPHE.png" alt="" title="Armour-Piercing High-Explosive and othet variations like a APHEC, APHECBC, APHEBC" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellHE)
                                {
                                    <img src="~/images/ShellHE.png" alt="" title="High-Explosive" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellAPCR)
                                {
                                    <img src="~/images/ShellAPCR.png" alt="" title="Armour-Piercing Composite Rigid" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellAPDS)
                                {
                                    <img src="~/images/ShellAPDS.png" alt="" title="Armour-Piercing Discarding Sabot" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellAPFSDS)
                                {
                                    <img src="~/images/ShellAPFSDS.png" alt="" title="Armour-Piercing Fin-Stabilized Discarding Sabot" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellHEAT)
                                {
                                    <img src="~/images/ShellHEAT.png" alt="" title="High-Explosive Anti-Tank" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellHEATFS)
                                {
                                    <img src="~/images/ShellHEATFS.png" alt="" title="High-Explosive Anti-Tank Fin-Stabilised" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellShrapnel)
                                {
                                    <img src="~/images/ShellShrapnel.png" alt="" title="Rare Shrapnel shell" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellHESH)
                                {
                                    <img src="~/images/ShellHESH.png" alt="" title="High Explosive Squash Head" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellATGM)
                                {
                                    <img src="~/images/ShellATGM.png" alt="" title="Anti-tank guided missile" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellSSM)
                                {
                                    <img src="~/images/ShellSSM.png" alt="" title="Unguided missiles" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellHEATGRENADE)
                                {
                                    <img src="~/images/ShellHEATGRENADE.png" alt="" title="Anti-tank grenade with a HE or HEAT warhead" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellHEVT)
                                {
                                    <img src="~/images/ShellHEVT.png" alt="" title="High-Explosive variable time fuze shell (self-destroying)" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellSAM)
                                {
                                    <img src="~/images/ShellSAM.png" alt="" title="Surface-to-air missile" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).ShellSmoke)
                                {
                                    <img src="~/images/ShellSmoke.png" alt="" title="Smoke shell" class="img-fluid" width="40">
                                }
                            }
                        </td>
                    }
                </tr>
                <tr class="high">
                    <th style="width: 20%" title="Muzzle velocity shows for the round with maximum armor-piercing ability">Muzzle velocity</th>
                    <td style="width: 15%">@Model.ElementAt(0).ShellSpeed m/s</td>
                    <td style="width: 15%">@Model.ElementAt(1).ShellSpeed m/s</td>
                    <td style="width: 15%">@Model.ElementAt(2).ShellSpeed m/s</td>
                    <td style="width: 15%">@Model.ElementAt(3).ShellSpeed m/s</td>
                </tr>
                <tr class="low">
                    <th style="width: 20%" title="Reload time tested with aces crew and spaded vehicle">Reload time</th>
                    <td style="width: 15%">@Model.ElementAt(0).ReloadTime s</td>
                    <td style="width: 15%">@Model.ElementAt(1).ReloadTime s</td>
                    <td style="width: 15%">@Model.ElementAt(2).ReloadTime s</td>
                    <td style="width: 15%">@Model.ElementAt(3).ReloadTime s</td>
                </tr>
                <tr class="low">
                    <th style="width: 20%" title="How far can aim down the cannon">Gun depression</th>
                    <td style="width: 15%">@Model.ElementAt(0).DownAimAngle°</td>
                    <td style="width: 15%">@Model.ElementAt(1).DownAimAngle°</td>
                    <td style="width: 15%">@Model.ElementAt(2).DownAimAngle°</td>
                    <td style="width: 15%">@Model.ElementAt(3).DownAimAngle°</td>
                </tr>


                @*<tr class="hideifempty">
                    <th style="width: 20%" title="Description of safety systems like a RWR, turrel, flares, etc">Safety systems</th>
                    @for (int i = 0; i < 4; i++)
                    {
                        <td style="width: 15%">
                            @{
                                if (Model.ElementAt(i).RWR)
                                {
                                    <img src="~/images/RWR.png" alt="" title="Radar warning receiver" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).Turrel)
                                {
                                    <img src="~/images/Turrel.png" alt="" title="Gun turret" class="img-fluid" width="40">
                                }
                                if (Model.ElementAt(i).Flares)
                                {
                                    <img src="~/images/Flares.png" alt="" title="Just a flares" class="img-fluid" width="40">
                                }
                            }
                        </td>
                    }
                </tr>*@
            </tbody>
        </table>

        <br>

        <table class="table table-hover table-bordered table-sm text-center">
            <tbody>
                <tr class="red-table-label">
                    <td style="width: 100%" colspan="5">Armor specifications</td>
                </tr>
                <tr class="high">
                    <th style="width: 20%" title="Armour thickness for turret. The minimum value of the rational armour thickness for just only frontal projection excluding especially vulnerable zones, like machine-gun ports, driver's hatch and others.">Armour thickness for frontal armor of turret</th>
                    <td style="width: 15%" class="align-middle">@Model.ElementAt(0).ReducedArmorFrontTurret mm</td>
                    <td style="width: 15%" class="align-middle">@Model.ElementAt(1).ReducedArmorFrontTurret mm</td>
                    <td style="width: 15%" class="align-middle">@Model.ElementAt(2).ReducedArmorFrontTurret mm</td>
                    <td style="width: 15%" class="align-middle">@Model.ElementAt(3).ReducedArmorFrontTurret mm</td>
                </tr>
                <tr class="high">
                    <th style="width: 20%" title="Armour thickness for frontal armor upper hull plate. The minimum value of the rational armour thickness for just only frontal projection excluding especially vulnerable zones, like machine-gun ports, driver's hatch and others.">Armour thickness for frontal armor upper hull plate</th>
                    <td style="width: 15%" class="align-middle">@Model.ElementAt(0).ReducedArmorTopSheet mm</td>
                    <td style="width: 15%" class="align-middle">@Model.ElementAt(1).ReducedArmorTopSheet mm</td>
                    <td style="width: 15%" class="align-middle">@Model.ElementAt(2).ReducedArmorTopSheet mm</td>
                    <td style="width: 15%" class="align-middle">@Model.ElementAt(3).ReducedArmorTopSheet mm</td>
                </tr>
                <tr class="high">
                    <th style="width: 20%" title="Armour thickness for frontal armor lower hull plate. The minimum value of the rational armour thickness for just only frontal projection excluding especially vulnerable zones, like machine-gun ports, driver's hatch and others.">Armour thickness for frontal armor lower hull plate</th>
                    <td style="width: 15%" class="align-middle">@Model.ElementAt(0).ReducedArmorBottomSheet mm</td>
                    <td style="width: 15%" class="align-middle">@Model.ElementAt(1).ReducedArmorBottomSheet mm</td>
                    <td style="width: 15%" class="align-middle">@Model.ElementAt(2).ReducedArmorBottomSheet mm</td>
                    <td style="width: 15%" class="align-middle">@Model.ElementAt(3).ReducedArmorBottomSheet mm</td>
                </tr>
            </tbody>
        </table>


        <br>

        <table class="table table-hover table-bordered table-sm text-center">
            <tbody>
                <tr class="red-table-label">
                    <td style="width: 100%" colspan="5">Riding specifications</td>
                </tr>
                <tr class="high">
                    <th style="width: 20%" title="Maximum speed on highway - tested on Fulda map">Max speed on highway</th>
                    <td style="width: 15%">@Model.ElementAt(0).MaxSpeedAtRoad km/h</td>
                    <td style="width: 15%">@Model.ElementAt(1).MaxSpeedAtRoad km/h</td>
                    <td style="width: 15%">@Model.ElementAt(2).MaxSpeedAtRoad km/h</td>
                    <td style="width: 15%">@Model.ElementAt(3).MaxSpeedAtRoad km/h</td>
                </tr>
                <tr class="high">
                    <th style="width: 20%" title="Maximum speed on cross-country - tested on Kursk map">Max speed on cross-country</th>
                    <td style="width: 15%">@Model.ElementAt(0).MaxSpeedAtTerrain km/h</td>
                    <td style="width: 15%">@Model.ElementAt(1).MaxSpeedAtTerrain km/h</td>
                    <td style="width: 15%">@Model.ElementAt(2).MaxSpeedAtTerrain km/h</td>
                    <td style="width: 15%">@Model.ElementAt(3).MaxSpeedAtTerrain km/h</td>
                </tr>
                <tr class="high">
                    <th style="width: 20%" title="Reverse speed on cross-country - tested on Kursk map">Reverse speed</th>
                    <td style="width: 15%">@Model.ElementAt(0).MaxSpeedAtTerrain km/h</td>
                    <td style="width: 15%">@Model.ElementAt(1).MaxSpeedAtTerrain km/h</td>
                    <td style="width: 15%">@Model.ElementAt(2).MaxSpeedAtTerrain km/h</td>
                    <td style="width: 15%">@Model.ElementAt(3).MaxSpeedAtTerrain km/h</td>
                </tr>
                <tr class="low">
                    <th style="width: 20%" title="100 metres ride - dash for the specific distance">100 meters acceleration</th>
                    <td style="width: 15%">@Model.ElementAt(0).AccelerationTo100 s</td>
                    <td style="width: 15%">@Model.ElementAt(1).AccelerationTo100 s</td>
                    <td style="width: 15%">@Model.ElementAt(2).AccelerationTo100 s</td>
                    <td style="width: 15%">@Model.ElementAt(3).AccelerationTo100 s</td>
                </tr>
                <tr class="low">
                    <th style="width: 20%" title="Turret turnaround - time of turn on 360 degrees">Turret turnaround</th>
                    <td style="width: 15%">@Model.ElementAt(0).TurnTurretTime s</td>
                    <td style="width: 15%">@Model.ElementAt(1).TurnTurretTime s</td>
                    <td style="width: 15%">@Model.ElementAt(2).TurnTurretTime s</td>
                    <td style="width: 15%">@Model.ElementAt(3).TurnTurretTime s</td>
                </tr>
                <tr class="low">
                    <th style="width: 20%" title="Hull turnaround - time of turn on 360 degrees">Hull turnaround</th>
                    <td style="width: 15%">@Model.ElementAt(0).TurnHullTime s</td>
                    <td style="width: 15%">@Model.ElementAt(1).TurnHullTime s</td>
                    <td style="width: 15%">@Model.ElementAt(2).TurnHullTime s</td>
                    <td style="width: 15%">@Model.ElementAt(3).TurnHullTime s</td>
                </tr>
                <tr class="high">
                    <th style="width: 20%" title="The maximum possible engine power of the spaded vehicle.">Engine power</th>
                    <td style="width: 15%">@Model.ElementAt(0).EnginePower h.p</td>
                    <td style="width: 15%">@Model.ElementAt(1).EnginePower h.p</td>
                    <td style="width: 15%">@Model.ElementAt(2).EnginePower h.p</td>
                    <td style="width: 15%">@Model.ElementAt(3).EnginePower h.p</td>
                </tr>
                <tr class="low">
                    <th style="width: 20%" title="Weight for equipped vehicle">Weight</th>
                    <td style="width: 15%">@Model.ElementAt(0).Weight t</td>
                    <td style="width: 15%">@Model.ElementAt(1).Weight t</td>
                    <td style="width: 15%">@Model.ElementAt(2).Weight t</td>
                    <td style="width: 15%">@Model.ElementAt(3).Weight t</td>
                </tr>
            </tbody>
        </table>




    </div>

